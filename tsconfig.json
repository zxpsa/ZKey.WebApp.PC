{
  "compilerOptions": {
    "outDir": "./jsSrc",
    // 在表达式和声明上有隐含的any类型时报错
    "noImplicitAny": true,
    // 采用的模块系统
    "module": "esnext",
    // 是否生成 .d.ts
    "declaration": true,
    "declarationDir": "./types1",
    // 从 tslib 导入辅助工具函数（比如 __extends， __rest等）
    "importHelpers":true,
    // 编译输出目标 ES 版本
    "target": "esnext",
    "jsx": "react",
    // 允许编译javascript文件
    "allowJs": true,
    "preserveConstEnums": false,
    // 是否启用实验性的ES装饰器。
    "experimentalDecorators": true,
    // 如何处理模块
    "moduleResolution": "node",
    // types option has been previously configured
    "types": [
      // add node as an option
      "node",
      // "*.d.ts"
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
  },
  "exclude": [
    // "node_modules",
    "**/*.spec.ts",
    // "**/*.d.ts"
  ],
  "include": [
    // "node_modules/*"
    "src/*",
    "**/*.d.ts"
  ],
  // 以严格模式解析
  "strict": true,
  // 在.tsx文件里支持JSX
  "jsx": "preserve",
  // 使用的JSX工厂函数
  "jsxFactory": "h",
  "pretty": true,
  "lib": [
    "dom",
    "es5",
    "es6",
    "es7",
    "es2015.promise"
  ]
}